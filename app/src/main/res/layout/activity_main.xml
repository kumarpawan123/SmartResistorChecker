<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout

        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffffa7"
        app:layout_constraintBottom_toTopOf="@+id/c2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/black"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="84dp"
            android:background="@android:color/background_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/brown"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="84dp"
            android:background="@color/brown"
            app:layout_constraintStart_toEndOf="@+id/black"
            app:layout_constraintTop_toTopOf="@+id/black" />

        <Button
            android:id="@+id/red"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:layout_marginLeft="76dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@android:color/holo_red_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/yellow"
            app:layout_constraintTop_toBottomOf="@+id/violet" />

        <Button
            android:id="@+id/yellow"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="28dp"
            android:background="@android:color/holo_orange_light"
            app:layout_constraintStart_toEndOf="@+id/green"
            app:layout_constraintTop_toBottomOf="@+id/grey" />

        <Button
            android:id="@+id/green"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="32dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/blue"
            app:layout_constraintTop_toBottomOf="@+id/white"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/blue"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="28dp"
            android:background="@android:color/holo_blue_bright"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gold" />

        <Button
            android:id="@+id/violet"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/violet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/grey"
            app:layout_constraintTop_toBottomOf="@+id/silver" />

        <Button
            android:id="@+id/grey"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="32dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintStart_toEndOf="@+id/white"
            app:layout_constraintTop_toBottomOf="@+id/orange" />

        <Button
            android:id="@+id/white"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="32dp"
            android:background="@android:color/background_light"
            app:layout_constraintStart_toEndOf="@+id/gold"
            app:layout_constraintTop_toBottomOf="@+id/brown" />

        <Button
            android:id="@+id/gold"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="32dp"
            android:background="@color/gold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/black" />

        <Button
            android:id="@+id/silver"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/silver"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/orange"
            app:layout_constraintTop_toTopOf="@+id/orange" />

        <Button
            android:id="@+id/orange"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginLeft="64dp"
            android:background="@color/orange"
            app:layout_constraintStart_toEndOf="@+id/brown"
            app:layout_constraintTop_toTopOf="@+id/brown" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/c2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/c1"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/band1"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="172dp"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:textStyle="normal|bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/band5"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/band4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/band4"
            app:layout_constraintTop_toTopOf="@+id/band4"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/band4"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/band3"
            app:layout_constraintStart_toEndOf="@+id/band3"
            app:layout_constraintTop_toTopOf="@+id/band3"
            app:layout_constraintVertical_bias="0.0"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/band3"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginLeft="44dp"
            app:layout_constraintBottom_toBottomOf="@+id/band2"
            app:layout_constraintStart_toEndOf="@+id/band2"
            app:layout_constraintTop_toTopOf="@+id/band2"
            app:layout_constraintVertical_bias="0.0"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/band2"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginLeft="56dp"
            app:layout_constraintBottom_toBottomOf="@+id/band1"
            app:layout_constraintStart_toEndOf="@+id/band1"
            android:background="@color/colorAccent"/>

        <Button
            android:id="@+id/Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="value"
            android:text="Result"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="243dp" />

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>